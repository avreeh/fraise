<!doctype html>
<html lang = "en">
<head>
	{{> common_resources}}
	<script src="js/lesson.js"></script> <!-- contains script to store/read favorite phrases -->
	{{> google_analytics}}
</head>
<body>
	<div class="navbar">
		<a href="index" class="left"><img src="images/back.png"></a>
		<a href="#" class="left nav-item help" id="favoritesHelp"><img src="images/help.png"></a>
		<a href="profile"><img src="images/profile.png"></a>
		<a href="favorites"><img src="images/heart.png"></a>
	</div>

	<div class="container">
		<h1 class="title-text">Favorites</h1>
		<br>
		<br>
		<ol>
		{{#each favorites}} <!-- begin categorizing each topic -->
		<li>{{topic}}
			<ul>
				{{#each phrasePairs}}  <!-- begin retrieving each phrase pair in the topic -->
				<li>{{this.[0]}}</li> <!-- index 0 is a french phrase -->
				<li>{{this.[1]}}</li> <!-- index 1 is an english phrase -->
				{{/each}}
			</ul>
		</li>
		<br>
		{{/each}}  <!-- end categorizing each topic -->
		</ol>
	</div>


	{{!-- <script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/home.js"></script> --}}
</body>
</html>
