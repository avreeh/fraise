<!doctype html>
<html lang = "en">
<head>
	<title>fraise - learn conversational French</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/fraise.css" rel="stylesheet">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/home.js"></script>
	<script src="js/bootstrap.js"></script>
	{{> facebook}}
	<script src="/js/facebook.js"></script>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top bg-light">
		<div class="container-fluid">
			{{!-- <div class="navbar-header">
				<a class="navbar-brand" href="#">fraise</a>
			</div> --}}
		{{!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button> --}}
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="nav navbar-nav">
					<li class="nav-item active">
						<a class="nav-link disabled" href="#"><span class="glyphicon glyphicon-home"></span> <span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item help">
						<a class="nav-link" href="#"><span class="glyphicon glyphicon-question-sign"></span> </a>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="nav-item">
						<a class="nav-link" href="achievements"><span class="glyphicon glyphicon-tower"></span> </a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="favorites"><span class="glyphicon glyphicon-heart"></span> </a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="profile"><span class="glyphicon glyphicon-user"></span> </a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container" id="search-box">
		<h1 class="title-text">Hello!</h1>
		<h3 class="title-text">What would you like to talk about?</h3>
		<br>
		<br>
		<form id="search-form" role="form" method="get" action="/search">
	    <div class="form-group">
	      <label for="topic" id="search-prompt">Search</label>
	      <input type="text" class="form-control" id="topic" placeholder="Topic" name="topic">
	    </div>
		</form>
		<p id="search-result"></p> <!-- this will change dynamically as defined in home.js -->
	</div>

	{{#each topics}}
	<div class="row topic-row">
		<div class="column" id={{name}}>
			<a href="lesson"><button type="button" class="btn btn-primary btn-block">{{name}}</button></a>
		</div>
	</div>
	{{/each}}
	
</body>
</html>
