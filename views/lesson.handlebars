<!doctype html>
<html lang = "en">
<head>
	<title>fraise - learn conversational French</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/lesson.js"></script>
	<script src="js/bootstrap.js"></script>
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/fraise.css" rel="stylesheet">
</head>
<body>

	<div class="navbar">
	<a href="index" class="left"><img src="images/back.png"></a>
	<a href="#" class="left nav-item help"><img src="images/help.png"></a>
    <a href="profile"><img src="images/profile.png"></a>
    <a href="favorites"><img src="images/heart.png"></a>
	</div>

	<div class = "lessonName"><h1>Requests</h1></div>


	{{#each phrases}}
	<div class="container-fluid row phrase-pair">
		<div class="column column-phrase">
			<p class="english">{{english}}</p>
			<br>
			<p class="french">{{french}}</p>
			<br>
		</div>
		<div class="column column-icon">
			<p><span class="frenchtoggle"><img src="images/dotdot.png"></span></p><br>
			<p><span class="glyphicon glyphicon-heart"></span></p>
		</div>
	</div>
	<hr>
	{{/each}}

	<div class="row topic-row">
		<a href="practice"><button type="button" class="btn btn-primary btn-block">Practice</button></a>
	</div>
	<div class="row topic-row">
		<a href="quiz"><button type="button" class="btn btn-primary btn-block">Quiz</button></a>
	</div>
</div>
</body>
</html>
