<!doctype html>
<html lang = "en">
<head>
	<title>fraise - learn conversational French</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/lesson.js"></script>
	<script src="js/bootstrap.js"></script>
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/fraise.css" rel="stylesheet">
</head>
<body>
	<div class="container">
	<nav class="navbar navbar-default navbar-fixed-top  bg-light">
		<div class="container-fluid">
			{{!-- <div class="navbar-header">
				<a class="navbar-brand" href="#">fraise</a>
			</div> --}}
		{{!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button> --}}
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="nav navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="index"><span class="glyphicon glyphicon-home"></span> </a>
					</li>
					<li class="nav-item help">
						<a class="nav-link" href="#"><span class="glyphicon glyphicon-question-sign"></span> </a>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="nav-item">
						<a class="nav-link" href="achievements"><span class="glyphicon glyphicon-tower"></span> </a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="favorites"><span class="glyphicon glyphicon-heart"></span> </a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="profile"><span class="glyphicon glyphicon-user"></span> </a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="jumbotron" id="search-box">
		<div class="row container-fluid">
			<div class="column topic-name-column">
				<h1>Help!</h1>
			</div>
			<div class="column topic-search-column">
				<form id="search-form" role="form" method="get" action="/search">
					<div class="form-group">
						<label for="topic" id="search-prompt">Search</label>
						<input type="text" class="form-control" id="topic" placeholder="Enter a phrase or keyword" name="topic">
					</div>
				</form>
			</div>
			</div>
		<p id="search-result"></p> <!-- this will change dynamically as defined in home.js -->
	</div>

	{{#each phrases}}
	<div class="container-fluid row phrase-pair">
		<div class="column column-phrase">
			<p class="english">{{english}}</p>
			<br>
			<p class="french">{{french}}</p>
			<br>
		</div>
		<div class="column column-icon">
			<p><span class="glyphicon glyphicon-pencil"></span></p><br>
			<p><span class="glyphicon glyphicon-heart"></span></p>
		</div>
	</div>
	<hr>
	{{/each}}

	<div class="row topic-row">
		<a href="practice"><button type="button" class="btn btn-primary btn-block">Practice</button></a>
	</div>
	<div class="row topic-row">
		<a href="quiz"><button type="button" class="btn btn-primary btn-block">Quiz</button></a>
	</div>
</div>
</body>
</html>
