<!doctype html>
<html lang = "en">
<head>
	<title>fraise - learn conversational French</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="../js/jquery-1.11.0.js"></script>
	<script src="../js/lesson.js"></script>
	<script src="../js/bootstrap.js"></script>
	<link href="../css/bootstrap.css" rel="stylesheet">
	<link href="../css/bootstrap-theme.css" rel="stylesheet">
	<link href="../css/fraise.css" rel="stylesheet">
</head>
<body>
	<div class="navbar">
		<a id="lessonLink" href="#" class="left"><img src="../images/exit.png"></a>
		<a href="#" class="left nav-item help" id="practiceHelp"><img src="../images/help.png"></a>
		<h2>Practice</h2>
		{{!-- <a href="profile"><img src="images/profile.png"></a>
		<a href="favorites"><img src="images/heart.png"></a> --}}
	</div>

	<div class="container text-center">
		<br>
		<h4 id="topicName"></h4>
		<br>
		<br>
		<br>
		<br>
		<h5>Tap to reveal translation</h5>

		<div id="phraseCarousel" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				{{#each phrases}}
					<li data-target="#phraseCarousel" data-slide-to="{{@index}}" id="indicator{{@index}}"></li>
				{{/each}}
			</ol>
			<div class="carousel-inner">
				{{#each phrases}}
				<div class="carousel-item item" id="{{@index}}">
					<p><a href="#"><button type="button" class="btn btn-primary btn-block phrase-button" id="card{{@index}}">
						{{french}}</button></a></p>
				</div>
				{{/each}}
			</div>
			<a class="left carousel-control" href="#phraseCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#phraseCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>	

