	<div class="container text-center">
		<h5>Tap to reveal translation</h5>

		<div id="phraseCarousel" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				{{!-- <li data-target="#phraseCarousel" data-slide-to="0" class="active"></li> --}}
				{{#each phrases}}
					<li data-target="#phraseCarousel" data-slide-to="{{@index}}" id="indicator{{@index}}"></li>
				{{/each}}
			</ol>
			<div class="carousel-inner">
				{{!-- <div class="carousel-item item active">
					<a href="#"><button type="button" class="btn btn-primary btn-block phrase-button" id="0">
						{{phrases.[0].french}}</button></a>
				</div> --}}
				{{#each phrases}}
				<div class="carousel-item item" id="{{@index}}">
					<a href="#"><button type="button" class="btn btn-primary btn-block phrase-button" id="card{{@index}}">
						{{french}}</button></a>
				</div>
				{{/each}}
			</div>
			<a class="left carousel-control" href="#phraseCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#phraseCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>	

